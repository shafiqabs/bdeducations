{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-cogs"></i>Menu Group

            </div>
            <div id="" class="date-tooltip" >
                <i class="fa fa-calendar"></i>
                {{ "now"|date("d-F-Y") }}
            </div>
        </div>
        <div>

            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" >Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>

                    <a href="javascript:" >Menu Group</a>

                </li>

            </ul>
        </div>
        {% include('flash-message.html.twig')  %}
        <div class="form-group form-group-custom backgroundWhite ">

            <div class="tabbable tabbable-custom" >
                <table class="table table-striped table-bordered table-hover table-full-width dataTable" >
                    <thead class="header">
                    <tr>
                        <th class="col-lg-8" >Menu Group Name</th>
                        <th >Action</th>

                    </tr>
                    </thead>
                    <tbody>

                    {% for entity in entities %}

                        <tr>
                            <td>{{ entity.name }}</td>
                            <td><a class="btn mini green-stripe btn-action" href="{{ path('menugrouping_new', { 'id': entity.id }) }}">Menu setting</a>
                            <a class="btn mini purple-stripe btn-action" href="{{ path('menugrouping_sorting', { 'menuGroup': entity.id }) }}">Menu sorting</a>
                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

    </div>
{% endblock %}
