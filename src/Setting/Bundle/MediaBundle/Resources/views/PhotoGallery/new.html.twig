{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box grey">
    <div class="portlet-title">
        <div class="caption"><i class="icon-cogs"></i>Photo Gallery

        </div>
        <div id="" class="date-tooltip" >
            <i class="fa fa-calendar"></i>
            {{ "now"|date("d-F-Y") }}
        </div>
    </div>
    <div>

        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{ path('homepage') }}" >Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="{{ path('gallery') }}" >Photo Gallery</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                Create
            </li>

            <li class="pull-right custom-pull-right" >
                <a class="btn green-stripe active" href=""><i class="icon-plus"></i> New Create</a>
                <a class="btn purple-stripe blue" href="{{ path('gallery') }}">Listing<i class="icon-headphones"></i></a>

            </li>
        </ul>
    </div>
    {% include('flash-message.html.twig')  %}
    <div class="form-group form-group-custom backgroundWhite ">
    <div class="modal-dialog modal-dialog-form" >
        <div class="modal-content" >

            <div class="modal-body ">
                <div class="portlet box">
                    {{ form_start(form) }}
                    {{ form_row(form._token) }}
                    <div class="form-group">
                        <label for="item_itemName"  class="control-label col-md-2 required">Gallery title :</label>
                        <div class="col-md-6 form-group-error">
                            <div class="input-icon">
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="item_itemName"  class="control-label col-md-2 required">Description :</label>
                        <div class="col-md-10">

                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="item_itemName"  class="control-label col-md-2 required">Feature Image:</label>
                        <div class="col-md-9 form-group-error">
                            <div class="input-icon">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                      <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                    </div>
                                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                    <div>
													<span class="btn btn-file"><span class="fileupload-new">Select image</span>
													<span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}</span>
                                        <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="item_itemName"  class="control-label col-md-2 required">Status:</label>
                        <div class="col-md-6">
                            <label class="checkbox line">
                                {{ form_widget(form.status) }}
                            </label>
                        </div>
                    </div>
                    <div class="form-actions">
                        <label for="item_itemName"  class="control-label col-md-3 required"></label>
                        <div class="col-md-6">
                            {{ form_widget(form.submit) }}{{ form_widget(form.reset) }}
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

    </div>
    </div>

{% endblock %}
