{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-cogs"></i>Option

            </div>
            <div id="" class="date-tooltip" >
                <i class="fa fa-calendar"></i>
                {{ "now"|date("d-F-Y") }}
            </div>
        </div>
        <div>

            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" >Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>

                    <a href="javascript:" >Option</a>

                </li>

                <li class="pull-right custom-pull-right" >
                    <a class="btn green-stripe blue" href="{{ path('globaloption_new') }}"><i class="icon-plus"></i> New Create</a>
                    <a class="btn purple-stripe active">Listing<i class="icon-headphones"></i></a>


                </li>
            </ul>
        </div>
        {% include('flash-message.html.twig')  %}
        <div class="form-group form-group-custom backgroundWhite ">

            <div class="tabbable tabbable-custom" >
                <table class="table table-striped table-bordered table-hover table-full-width dataTable" >
                    <thead class="header">
                    <tr>
                        <th>User name </th>
                        <th>Syndicate</th>
                        <th>Domain</th>
                        <th>Sub-domain</th>
                        <th>Is mobile </th>
                        <th>Action</th>

                    </tr>
                    </thead>
                    <tbody>

                    {% for entity in entities %}

                        <tr>

                            <td>{{ entity.user }}</td>
                            <td>{{ entity.syndicate.name|default('---') }}</td>
                            <td>{{ entity.domain|default('---') }}</td>
                            <td>{{ entity.subDomain }}</td>
                            <td>{% if(entity.isMobile ) %}Yes{% else %}No{% endif %}</td>
                            <td>

                                <a class="btn mini green-stripe btn-action" href="{{ path('globaloption_edit', { 'id': entity.id }) }}">Edit</a>
                                <a class="btn mini blue-stripe btn-action" href="{{ path('globaloption_show', { 'id': entity.id }) }}">View</a>
                                <a class="btn mini red-stripe btn-action delete" href="javascript:" rel="{{ path('globaloption_delete', { 'id': entity.id }) }}" >Delete</a>
                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>

    </div>
{% endblock %}

