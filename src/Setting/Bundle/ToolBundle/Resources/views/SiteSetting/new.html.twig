{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box grey">
    <div class="portlet-title">
        <div class="caption"><i class="icon-cogs"></i>Site Setting

        </div>
        <div id="" class="date-tooltip" >
            <i class="fa fa-calendar"></i>
            {{ "now"|date("d-F-Y") }}
        </div>
    </div>
    <div>

        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{ path('homepage') }}" >Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="{{ path('sitesetting') }}" >Site Setting</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                Create
            </li>

            <li class="pull-right custom-pull-right" >
                <a class="btn green-stripe active" href=""><i class="icon-plus"></i> New Create</a>
                <a class="btn purple-stripe blue" href="{{ path('sitesetting') }}">Listing<i class="icon-headphones"></i></a>

            </li>
        </ul>
    </div>
    {% include('flash-message.html.twig')  %}
    <div class="form-group form-group-custom backgroundWhite ">
        <div class="modal-dialog modal-dialog-form" >
            <div class="modal-content" >

                <div class="modal-body ">
                    <div class="portlet box">
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}

                        <div class="form-group">
                            <label for="item_itemName"  class="control-label col-md-2 required">Web theme:</label>
                            <div class="col-md-9 form-group-error">
                                <div class="input-icon">
                                    {{ form_widget(form.webTheme) }}
                                    {{ form_errors(form.webTheme) }}
                                </div>
                            </div>
                        </div>
                       <div class="form-group">
                            <label for="item_itemName"  class="control-label col-md-2 required">Mobile theme:</label>
                            <div class="col-md-9 form-group-error">
                                <div class="input-icon">
                                    {{ form_widget(form.mobileTheme) }}
                                    {{ form_errors(form.mobileTheme) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="item_itemName"  class="control-label col-md-2 required">Syndicate:</label>
                            <div class="col-md-9 form-group-error" style="margin-top: 5px">
                                <div class="input-icon">
                                    {{ form_widget(form.syndicates) }}
                                    {{ form_errors(form.syndicates) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <label for="item_itemName"  class="control-label col-md-2 required"></label>
                            <div class="col-md-9">
                                {{ form_widget(form.submit) }}{{ form_widget(form.reset) }}
                            </div>
                        </div>


                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>

    </div>



    </div>
{% endblock %}
