{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-cogs"></i>Education

            </div>
            <div id="" class="date-tooltip" >
                <i class="fa fa-calendar"></i>
                {{ "now"|date("d-F-Y") }}
            </div>
        </div>
        <div class="">

            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" >Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('education') }}" >Education</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    Show
                </li>

                <li class="pull-right custom-pull-right">
                    <a class="btn green-stripe blue" href="{{ path('education_new') }}"><i class="icon-plus"></i> New Create</a>
                    <a class="btn red-stripe purple" href="{{ path('education_edit', { 'id': entity.id }) }}"><i class="ui-icon-pencil"></i> Edit</a>
                    <a class="btn purple-stripe blue" href="{{ path('education') }}">Listing<i class="icon-headphones"></i></a>

                </li>
            </ul>
        </div>
        {% include('flash-message.html.twig')  %}
        <div class="form-group form-group-custom backgroundWhite ">
            <div class="modal-dialog modal-dialog-form" >
                <div class="modal-content" >

                    <div class="modal-body">
                        <div class="form-group form-group-custom backgroundWhite ">

                            <div class="tabbable tabbable-custom" >

                                <table class="table table-striped table-bordered table-hover table-full-width dataTable" >

                                    <tbody>

                                    <tr>
                                        <td><strong>Name</strong></td> <td>{{ entity.name }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Establishment</strong></td> <td>{{ entity.establishment|date('d-m-Y') }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Institute Cheif</strong></td> <td>{{ entity.instituteCheif }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Institute Cheif Designation</strong></td> <td>{{ entity.instituteCheifDesignation }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Address</strong></td> <td>{{ entity.address }}{% if entity.thana %}{{ entity.thana.name }}{% endif %}{% if entity.thana %}, {{ entity.thana.district.name }}{% endif %}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Hotline</strong></td> <td>{{ entity.hotline }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Phone</strong></td> <td>{{ entity.phone }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Fax</strong></td> <td>{{ entity.fax }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email address</strong></td> <td>{{ entity.email }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Website</strong></td> <td>{{ entity.website }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Contact Person</strong></td> <td>{{ entity.contactPerson }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Contact Person Designation</strong></td> <td>{{ entity.contactPersonDesignation }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Message</strong></td> <td>{{ entity.overview }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Logo</strong></td> <td>
                                            {% if(entity.webPath) %}
                                                <img alt="" src="/{{ entity.webPath }}">
                                            {% else %}
                                                <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status</strong></td> <td>{% if(entity.status ==1) %}Active {% else %}Inactive{% endif %}</td>
                                    </tr>

                                    </tbody>
                                </table>

                            </div>


                        </div>

                    </div>
                </div>
            </div>

        </div>



    </div>
{% endblock %}
